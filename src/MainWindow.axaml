<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:TodoListApp.Models"
        x:Class="TodoListApp.MainWindow"
        Title="To-Do List"
        Width="400" Height="500">

    <StackPanel Margin="20">
        <TextBlock Text="My To-Do List" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="TaskInput" Width="180" Watermark="Enter a task..."/>
            <TextBox x:Name="TagInput" Width="120" Watermark="tags (comma separated)" Margin="10,0,0,0"/>
            <Button x:Name="AddButton" Content="Add" Margin="10,0,0,0" Width="70"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Filter by tag:" VerticalAlignment="Center"/>
            <ComboBox x:Name="TagFilter"
                      Width="150"
                      Margin="10,0,0,0"
                      PlaceholderText="All"/>
        </StackPanel>

        <ListBox x:Name="TaskList" Height="350">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="models:TaskItem">
                    <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsCompleted}" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <ItemsControl>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:TaskItem">
                                    <Border Background="#E0E0E0"
                                            CornerRadius="8"
                                            Margin="2"
                                            Padding="4,2">
                                        <TextBlock Text="{Binding .}" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="DeleteButton" Content="Delete selected" Margin="0,10,0,0"/>
            <Button x:Name="SaveToJson" Content="Save to JSON" Margin="0,10,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
